<div class="row">
  <div class="col-md-offset-1 col-md-10">
    <h1>Zoznam tried učiteľa <%= "#{current_user.name}" %></h1>
    <table class="table table-hover table-condensed">
      <thead>
      <tr>
        <th>#</th>
        <th>Názov triedy</th>
        <th>Počet žiakov</th>
      </tr>
      </thead>
      <tbody>
      <% @groups.each do |group| %>
          <tr>
            <td><%= "#{group.id}" %></td>
            <td><%= link_to task.exercise.template.text, edit_task_path(task.id) %></td>
            <td><%= group.id %></td>
            <td><%= "#{task.sentence.content}" %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>