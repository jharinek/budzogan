<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <h1 class="form-title">Nové cvičenie 3/3</h1>

    <h3 class="form-subtitle">Priradenie cvičenia triede</h3>

    <%= form_for @exercise, url: wizard_path do |f| %>
        <%= render 'shared/form_messages', model: @exercise %>

        <div class="form-group">
          <%= f.label :workgroup, 'Trieda' %>
          <%= f.collection_select :workgroup, @workgroups, :id, :name, {include_blank: true}, {data: {as: :select2}, class: 'attribute-select'} %>
        </div>

        <div class="form-group">
          <%= f.label :start_time, 'Čas začiatku cvičenia' %>
          <div class="form-control">
            <%= f.datetime_select :start_time %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :end_time, 'Čas ukončenia cvičenia' %>
          <div class="form-control">
            <%= f.datetime_select :end_time %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :distribution_strategy, 'Stratégia rozdelenia viet' %>
          <%= f.collection_select :distribution_strategy, @strategies, :first, :last, {include_blank: true}, {data: {as: :select2}, class: 'attribute-select'} %>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary pull-right"><%= t('form.submit') %></button>
          <%= link_to t('form.previous'), previous_wizard_path, method: :get, class: 'btn btn-default pull-right' %>
        </div>
    <% end %>
  </div>
</div>
