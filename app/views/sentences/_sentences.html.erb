<%= link_to 'Generuj 10 nových viet', sentences_generate_path, remote: true, class: 'btn btn-default' %>

<table class="table" id="sentences-table">
  <thead>
    <tr class="active">
      <th>Poradové číslo</th>
      <th>Veta</th>
      <th>Zdroj vety</th>
      <th>Akcie</th>
    </tr>
  </thead>

  <tbody>
    <% @sentences.each_with_index do |sentence, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= sentence.content %></td>
        <td>TODO</td>
        <td><%= link_to 'Zmaž vetu', '#', class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="input-group">
  <input class="form-control" type="text"/>
  <span class="input-group-btn">
    <%= button_tag 'Pridaj vetu', class: 'btn btn-success' %>
  </span>
</div>
