<h2>Registrácia</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= render 'shared/form_messages', model: @user %>

    <div class="form-group">
      <%= f.label 'Prihlasovacie meno' %>
      <%= f.text_field :login, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label 'Krstné meno' %>
      <%= f.text_field :first, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label 'Priezvsiko' %>
      <%= f.text_field :last, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label 'Email' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

  <div class="form-group">
    <%= f.label 'Heslo' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Potvrdenie hesla' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Škola' %>
    <%= f.collection_select :organization_id, Organization.all, :id, :name, { include_blank: true }, class: 'form-control' %>
  </div>

    <div class="form-group">
      <%= f.label 'Ročník' %>
      <%= f.collection_select :grade, (1..9), :to_s, :to_s, { include_blank: true }, class: 'form-control' %>
    </div>

  <div class="form-group">
    <%= f.submit "Registrovať", class: 'btn btn-primary pull-right' %>
  </div>
<% end %>
