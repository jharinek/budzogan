<h2>Registrácia</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= render 'shared/form_messages', model: @user %>

    <div class="form-group">
      <%= f.label 'Prihlasovacie meno' %>
      <%= f.text_field :login, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label 'Krstné meno' %>
      <%= f.text_field :first, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label 'Priezvisko' %>
      <%= f.text_field :last, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label 'Pohlavie' %>
      <%= f.collection_select :sex, ['chlapec', 'dievča'], :to_s, :to_s, { include_blank: true }, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label 'Email (ak nemáš email, môžeš nechať prázdne)' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

  <div class="form-group">
    <%= f.label 'Heslo' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Potvrdenie hesla' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Škola' %>
    <%= f.text_field :organization, class: 'form-control' %>
  </div>

    <div class="form-group">
      <%= f.label 'Ročník' %>
      <%= f.collection_select :grade, ['8.ročník ZŠ', '9.ročník ZŠ', '1.ročník SŠ', '2.ročník SŠ', '3.ročník SŠ', '4.ročník SŠ', 'iné'], :to_s, :to_s, { include_blank: true }, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label 'Akou známkou zo slovenčiny by si sa ohodnotil?' %>
      <%= f.collection_select :evaluation, [1,2,3,4,5], :to_s, :to_s, { include_blank: true }, class: 'form-control' %>
    </div>

  <div class="form-group">
    <%= f.submit "Registrovať", class: 'btn btn-primary pull-right' %>
  </div>
<% end %>
