<div class="row">
  <div class="col-md-offset-3 col-md-9">
    <div class="well">
      <p>
        <% @sentence.each_with_index do |word, index| %>
          <% if @used_words.include? word %>
            <span class="text-draggable disabled" id="text-<%= index %>"><%= word %></span>
          <% else %>
            <span class="text-draggable" id="text-<%= index %>"><%= word %></span>
          <% end %>
        <% end %>
      </p>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <div class="well itemized" id="boxes">
      <h2>Vetné členy</h2>
    </div>
    <div class="well itemized" id="lines">
      <h2>Vetné sklady</h2>
      <div class="line-draggable">
        <span id="predicative"></span>
      </div>
      </br>
      <div class="line-draggable">
        <span id="determinative"></span>
      </div>
      <div class="line-draggable">
        <span id="assignative"></span>
      </div>
    </div>
    <div class ="well itemized" id="properties">
      <h2>Vlastnosti</h2>
      <div id="item-properties">
        <%= render 'box_details' %>
      </div>
    </div>
  </div>
  <div class="col-md-9 myContainer" id="paper" data-value="<%= @task.student_solution.to_json %>">
  </div>
  <%= button_to "Uložiť", { controller: :tasks, action: :update }, method: :patch, id: 'save', remote: true %>
</div>
