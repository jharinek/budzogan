<div class="row">
  <div class="col-md-offset-1 col-md-10">
    <h1>Zoznam tried učiteľa <%= "#{current_user.name}" %></h1>
    <% if !@groups.empty?  %>
        <div class="col-md-offset-8 col-md-4"><%= link_to 'Nová trieda', new_workgroup_path, class: 'btn btn-lg btn-primary pull-right' %></div>
        <table class="table table-hover table-condensed">
          <thead>
          <tr>
            <th>#</th>
            <th>Názov triedy</th>
            <th>Počet žiakov</th>
          </tr>
          </thead>
          <tbody>
          <% @groups.each_with_index do |group, index| %>
              <tr>
                <td><%= index+1 %></td>
                <td><%= link_to group.name, workgroup_path(id: group.id) %></td>
                <td><%= group.students.count %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% else %>
        <div class="alert alert-warning">
          Zatiaľ nemáte vytvorené žiadne triedy, <strong><%= link_to 'vytvorte prvú.', new_workgroup_path %></strong>
        </div>
  <% end  %>
  </div>
</div>