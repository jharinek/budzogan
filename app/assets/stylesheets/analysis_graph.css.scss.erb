// Style the environment for solving tasks
svg {

}

#paper {
    border: 1px solid gray;
}

.item-box.draggable.ui-draggable, .text-draggable, g {
  cursor: move;
}

.item-line {
}

#predicative {
    cursor: move;
    background:url(<%= asset_path 'cursors/horizontal_line.png' %>) left top;
    width:50px;
    height:20px;
    display: block;
}

#determinative {
    cursor: move;
    background:url(<%= asset_path 'cursors/inclined_line.png' %>) left top;
    width:30px;
    height:20px;
    display: block;
}

#assignative {
    cursor: move;
    background:url(<%= asset_path 'cursors/horizontal_line.png' %>) left top;
    width:50px;
    height:25px;
    display: block;
}

.item-box {
  width:   133px;
  height:  54px;
  margin-bottom: 5px;
  float:   left;
}

.item-text {
  font-size:  140%;
  text-align: center;
}

.item-line {
  width: 100%;
  height: 100%;
}

circle {
    cursor: pointer;
}

.delete-button, .delete-text {
    visibility: hidden;
}

.highlighted {
  outline: 0px solid #FF0000; /* `outline` doesn't work in Firefox, Opera and IE9+ correctly. */
  opacity: 0.7 \9; /* It targets only IE9. */
}
